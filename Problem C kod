#include<bits/stdc++.h>
using namespace std;


int main ()
{
  int t;
  cin >> t;
  while (t--)
	{
	  int n, sf = 0, br = 0;
	  cin >> n;
	  string s;
	  cin >> s;
	  for (int i = 0; i < n; i++)
		{
		  if (s[i] == '0')
			{
			  sf++;
			}
		  else
			{
			  br++;
			}
		}
	  if (br > sf)
		{
		  cout << sf + 1 << endl;
		}
	  else
		{
		  cout << br << endl;
		}

	}

}
